  <thead>
    <tr class="admin-table-row">
      <td class="admin-table-element">Категория (ID)</td>
      <td class="admin-table-element">Продукт (ID)</td>
    </tr>
  </thead>

  <tbody id="categories_table_container">
  </tbody>
</table>

<table class="admin-table">
  <thead>
    <tr class="admin-table-row">
      <td class="admin-table-element">Продукт (ID)</td>
      <td class="admin-table-element">Описание </td>
    </tr>
  </thead>

  <tbody id="products_table_container">
  </tbody>
</table>

<h1>Добавить администратора</h1>
<form id="admin_registration_form">
  <p>Имя:</p>
  <input id="new_admin_name" type="text" name="name" required>
  <p>Login:</p>
  <input id="new_admin_login" type="text" name="login" required>
  <p>Password:</p>
  <input id="new_admin_password" type="password" name="password" required>
  <p><input id="add_new_admin" type="submit" value="Добавить"></p>
</form>

